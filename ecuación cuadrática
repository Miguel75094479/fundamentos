#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main ()
{
 float a,b,c,d,x1,x2;
 cout<<"ingrese la primera variable: ";cin>>a;
 cout<<"ingrese la segunda variable:" ;cin>>b;
 cout<<"ingrese la tercera variable:"; cin>>c;
 
 if(a!=0)
 {

	d=b*b-4*a*c;
	if(d>0)
	{
		x1=(-b+sqrt(d))/(2*a);
		x2=(-b+sqrt(d))/(2*a);
		cout<<"x1:"<<x1<<endl;
		cout<<"x2:"<<x2<<endl;
	}
	else
		if(d==0)
			cout<<"solución única:"<<-b/(2*a);
		else cout<< "solución imaginaria"<<endl;
 }
 getch();
}
